{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "taskman/**",    
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",      
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",           
        "dest": "/taskman/index.html"
      }
    ]
  }
  